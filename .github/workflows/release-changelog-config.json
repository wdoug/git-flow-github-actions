{
  "categories": [
    {
      "title": "## 🚀 Features",
      "labels": ["feature"]
    },
    {
      "title": "## 🐛 Fixes",
      "labels": ["BUG", "fix"]
    },
    {
      "title": "## 🧪 Tests",
      "labels": ["test"]
    },
    {
        "title": "## 📦 Dependencies",
        "labels": ["dependencies"]
    },
    {
      "title": "## 📖 Docs",
      "labels": ["documentation"]
    },
    {
      "title": "## 🧹 Chores",
      "labels": ["chore"]
    }
  ],
  "ignore_labels": [
    "ignore"
  ],
  "sort": "DESC",
  "template": "## What's Changed\n${{UNCATEGORIZED}}\n${{CHANGELOG}}",
  "pr_template": "- ${{TITLE}} (#${{NUMBER}}) **@${{AUTHOR}}**",
  "empty_template": "- no changes",
  "exclude_merge_branches": [
    "dev",
    "production"
  ],
  "label_extractor": [
    {
      "pattern": "(\\w+)",
      "target": "$1",
      "on_property": "title"
    },
    {
      "pattern": "^Fix",
      "target": "fix",
      "on_property": "title"
    },
    {
      "pattern": "(Create)",
      "target": "test",
      "on_property": "title"
    },
    {
      "pattern": "(Content)",
      "target": "dependencies",
      "on_property": "title"
    }
  ]
}
